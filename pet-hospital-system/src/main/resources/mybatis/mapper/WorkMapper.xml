<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phs.mapper.WorkMapper">
    <resultMap id="RM_WorkVo" type="com.phs.entity.WorkEntity">
        <result column="id" property="id"/>
        <result column="job_id" property="job_id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="room" property="room"/>
        <result column="video_url" property="video_url"/>
    </resultMap>

    <select id = "getWorkByJobId" resultMap="RM_WorkVo">
        select *
        from phs_work
        where job_id=#{job_id}
    </select>

    <select id = "getWorkById" resultMap="RM_WorkVo">
        select *
        from phs_work
        where id=#{id}
    </select>

    <insert id="insertWork" parameterType="WorkEntity">
        insert into phs_work(
            job_id,
            name,
            description,
            room,
            video_url
        )values (
                    #{job_id},
                    #{name},
                    #{description},
                    #{room},
                    #{video_url}
                )
    </insert>
    
    <delete id="deleteWork" parameterType="int">
        delete from phs_work
        where id = #{id}
    </delete>

    <update id="updateWork" parameterType="WorkEntity">
        update phs_work
        <set>
            job_id = #{job_id},
            name = #{name},
            description = #{description},
            room = #{room},
            video_url = #{video_url}
        </set>
        where id = #{id}
    </update>

</mapper>